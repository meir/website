
str style = use("assets/main.scss")
func navigation = use("components/navigation")

func title = () str {
  if meta.title != nil {
    return meta.title
  }
  return "YesImHuman.dev"
}

return (arr body) element {
  return : html {
    head {
      title > @{title()}
      link rel="stylesheet" href=@{style};
    }
    body {
      @{navigation()}
      main > article > @{body}
    }
  }
}
