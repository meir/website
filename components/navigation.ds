func is_active = (str item_url) str {
  if meta.url == item_url {
    return "active"
  }
  return ""
}

func item = (str item_url, str item_title) element {
  return : li id=@{item_title} class=@{is_active(item_url)} {
    a href=@{item_url} > @{item_title}
  }
}

return () element {
  return : nav {
    ul {
      @{item("/", "home")}
      @{item("/blog", "blog")}
      @{item("/about", "about")}
    }
    span.blocker;
  }
}
