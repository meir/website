
func is_active = (str page, str item) str {
  if page == item {
    return "active"
  }
  return ""
}

func item = (str active, str url, str title) element {
  return : li id=@{title} class=@{is_active(url, active)} {
    a href=@{url} > @{title}
  }
}

return (str active) element {
  return : nav {
    ul {
      @{item(active, "/", "home")}
      @{item(active, "/blog", "blog")}
      @{item(active, "/about", "about")}
    }
    span.blocker;
  }
}
