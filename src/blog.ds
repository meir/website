meta {
  str url = "/blog"
  str title = "Blog"
}

func layout = use("components/layout")

return layout([
  : h1 > "Blog.",
  : section {
    ul {
      for page in std.pages() {
        if page.tag == "blog" {
          collect : li {
            a href=@{page.url} {
              @{page.title}
            }
          }
        }
      }
    }
  }
])
